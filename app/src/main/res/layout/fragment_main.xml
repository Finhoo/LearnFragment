<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.fayne.project.learnfragment.MainFragment">

    <Button
        android:id="@+id/btnShowAnotherFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到另一个Fragment"/>

    <Button
        android:id="@+id/btnStartSliderActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动有侧边栏的Activity"/>

    <Button
        android:id="@+id/btnStartTabbedActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动Tabbed Activity"/>

</LinearLayout>
